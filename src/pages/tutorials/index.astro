---
import PageHeader from '../../components/PageHeader.astro';
import PageLayout from '../../layouts/PageLayout.astro';
---

<PageLayout title="Tutorial Videos" description="Tutorial videos for building models.">
  <main>
    <div>
      <PageHeader title="Tutorial Videos" />
      <h1>Tutorial Videos</h1>
    </div>
    <div class="content">
      <nav class="sidebar">
        <span class="sidebar-title">Playlist</span>
        <button class="active">Daylight Simulation</button>
        <button>Solar Simulation</button>
        <button>Sun Path Simulation</button>
      </nav>
      <div>
        <video controls>
          <source src="/tutorials/Daylight Simulation.mp4" type="video/mp4" />
        </video>
      </div>
    </div>
  </main>
</PageLayout>
<style>
  main {
    max-width: 968px;
  }

  .content {
    display: flex;
    gap: 2rem;
  }

  video {
    max-width: 100%;
    height: auto;
  }

  .sidebar {
    width: 268px;

    > button {
      border: none;
      border-radius: var(--rounded-xs);
      background: none;
      padding: 0.375rem 0.5rem;
      color: rgba(var(--text-color));
      width: 100%;
      text-align: left;
    }

    button.active {
      background: #ddd;
    }

    @media (prefers-color-scheme: dark) {
      button.active {
        background: #333;
      }
    }
  }

  .sidebar-title {
    color: rgba(169, 169, 169);
    font-size: var(--text-sm);
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }
</style>

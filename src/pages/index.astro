---
import Layout from '../layouts/Layout.astro';
import Menu from '../components/menu/Menu';
import CesiumScene from '../components/cesium/CesiumScene.astro';
import Toolbar from '../components/toolbar/Toolbar.astro';
import WarningToast from '../components/WarningToast.astro';
import BottomBar from '../components/BottomBar.astro';
---

<Layout title="NUS Digital Twin">
  <Menu client:load />
  <CesiumScene />
  <Toolbar />
  <div id="alert-box">
    <a href="https://forms.gle/SbtKCbAqF1AKzKhi7" target="_blank" rel="noreferrer" id="construction">
      This application is under construction. Report any issues or feedback here.
    </a>
    <WarningToast />
  </div>
  <BottomBar />
</Layout>
<script>
  import tippy from 'tippy.js';

  tippy('#home-btn', {
    content: 'Reset view',
    arrow: false,
  });

  tippy('#tutorial-btn', {
    content: 'Tutorial videos',
    arrow: false,
  });

  tippy('#map-picker-btn', {
    content: 'Map picker',
    arrow: false,
    touch: false,
  });

  tippy('.search > svg', {
    content: 'Clear search',
    arrow: false,
    touch: false,
  });
</script>

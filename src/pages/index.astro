---
import Layout from '../layouts/Layout.astro';
import Menu from '../components/menu/Menu';
import CesiumScene from '../components/cesium/CesiumScene.astro';
import Toolbar from '../components/toolbar/Toolbar.astro';
import BottomBar from '../components/BottomBar.astro';
import NotificationsBox from '../components/notifications/NotificationsBox';
---

<Layout title="NUS Digital Twin">
  <Menu client:load />
  <CesiumScene />
  <Toolbar />
  <NotificationsBox client:load />
  <BottomBar />
</Layout>
<script>
  import tippy from 'tippy.js';

  tippy('#home-btn', {
    content: 'Reset view',
    arrow: false,
  });

  tippy('#capture-btn', {
    content: 'Capture view',
    arrow: false,
  });

  tippy('#map-picker-btn', {
    content: 'Map picker',
    arrow: false,
    touch: false,
  });

  tippy('.clear-btn', {
    content: 'Clear search',
    arrow: false,
    touch: false,
  });
</script>

---
import Menu from '../components/menu/Menu';
import CesiumScene from '../components/cesium/CesiumScene.astro';
import Toolbar from '../components/toolbar/Toolbar.astro';
import BottomBar from '../components/bottom-bar/BottomBar.astro';
import NotificationsBox from '../components/notifications/NotificationsBox';
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout>
  <Menu client:only="react" />
  <CesiumScene />
  <Toolbar />
  <NotificationsBox client:only="react" />
  <BottomBar />
</AppLayout>
<script>
  import tippy from 'tippy.js';

  tippy('#home-btn', {
    content: 'Reset view',
    arrow: false,
  });

  tippy('#screenshot-btn', {
    content: 'Screenshot current view',
    arrow: false,
  });

  tippy('#map-picker-btn', {
    content: 'Map picker',
    arrow: false,
    touch: false,
  });

  tippy('.clear-btn', {
    content: 'Clear search',
    arrow: false,
    touch: false,
  });
</script>

---
import 'cesium/Build/Cesium/Widgets/widgets.css';
---

<script>
  window.CESIUM_BASE_URL = '/cesium';
  Ion.defaultAccessToken = import.meta.env.PUBLIC_CESIUM_TOKEN;

  import {
    activePage,
    activeModel,
    buildingId,
    activeMapLayer,
    activeGISLayer,
    buildingColorSetting,
    isSelectColorByDistance,
    colorByDistancePosition,
    flyToPosition,
    userSettings,
    toastMessage,
  } from '../../store';

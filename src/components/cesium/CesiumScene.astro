  <h1>NUS Digital Twin</h1>
  <div>
    <div id="loading-bar">
      <div id="loading-progress"></div>
    </div>
    <div id="loading-text">
      Loading...<span id="loading-percentage">0</span>%
    </div>
  </div>
</div>
